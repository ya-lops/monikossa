---
interface Props {
  inline?: boolean;
  data: Array<any>;
}

const { data, inline } = Astro.props;
---

<ul class="app-list" class:list={["app-list", { "+inline": inline }]}>
  {data.map((i) => <li class="_item">{i}</li>)}
</ul>

<style lang="scss">
  .app-list {
    display: flex;
    flex-flow: column;
    gap: 1.6rem;
    list-style: none;
    margin: 0;
    padding: 0;

    &.\+inline {
      flex-flow: row;
      flex-wrap: wrap;
      gap: 1.6rem 2.4rem;
    }

    ._item {
      &::before {
        content: "✔️";
      }
    }
  }
</style>
