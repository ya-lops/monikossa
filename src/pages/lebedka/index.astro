<style is:global>
  mark {
    color: var(--color-accent);
    background: none;
  }

  .\+centered {
    margin-inline: auto;
  }

  img {
    user-select: none;
    pointer-events: none;
  }

  .\+frame {
    position: relative;
    isolation: isolate;

    &::after {
      content: "";
      position: absolute;
      inset: 0;
      background: var(--color-accent);
      transform: rotate(1deg) skewX(2deg);
      z-index: -1;
      border-radius: var(--radius-3);
    }

    & + &::after {
      transform: rotate(-0.5deg) skewX(-2.71deg);
    }

    & + & + &::after {
      transform: rotate(-1.5deg) skewX(-1.71deg);
    }
  }

  ._free-lesson {
    text-wrap: balance;
    line-height: 1.5;

    h3 {
      font-family: var(--font-family-secondary);
      font-size: 3.2rem;
    }

    p {
      font-size: 2.4rem;
    }
  }

  hr {
    width: 100%;
    border: 0;
    height: 2px;
    background: var(--color-accent);
  }
</style>
