---
const { data } = Astro.props;
---

<article class="app-product-card">
  <div class="_image">
    <img src={data.image} loading="lazy"/>
  </div>
  <header class="_info">
    <div class="_price">{data.price} &#8381;</div>
    <div class="_type">{data.type}</div>
    <h3 class="_name">{data.name}</h3>
    <div class="_address">{data.address}</div>
  </header>
  <div class="_details">
    <div>🛏️ {data.details.bedroom}</div>
    <div>🛁 {data.details.bathroom}</div>
    <div>🚗{data.details.garage}</div>
    <div class="_area">🟩 {data.area}</div>
  </div>
</article>

<style lang="scss">
  .app-product-card {
    display: grid;
    grid-template-columns: 100%;
    grid-template-rows: auto minmax(0,1fr) auto;
    align-content: start;
    align-items: start;
    border-radius: 1.6rem;
    box-shadow: var(--shadow-2);
    color: var(--color-text-secondary);

    ._image {
      aspect-ratio: 42/28;
      border-radius: 1.6rem 1.6rem 0 0;
      overflow: clip;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: scale .33s;
        will-change: scale;
      }
    }

    &:hover ._image img {
      scale: 1.05;
    }

    :where(._info, ._details) {
      padding: 1.6rem;
    }

    ._info {
      display: flex;
      flex-wrap: wrap;
      gap: .8rem 2.4rem;
    }

    ._price {
      font-size: 1.8rem;
      font-weight: 500;
    }

    ._type {
      font-size: 1.4rem;
    }

    ._name {
      width: 100%;
    }

    ._address {
      width: 100%;
      font-size: 1.4rem;
    }

    ._details {
      display: flex;
      gap: 1.6rem;
      border-top: 1px solid var(--color-line);

      > :last-child {
        margin-left: auto;
      }
    }

    ._area {
    }
  }
</style>
