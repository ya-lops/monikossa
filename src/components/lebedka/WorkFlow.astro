---
const flow = [
  {
    name: "Легковая техника",
    text: "Мы вытащим вас из грязи!",
  },
  {
    name: "Грузовой транспорт",
    text: 'Мы вытащим ваш грузовик из грязи!',
  },
  {
    name: "Спецтехника",
    text: "Мы вытащим вашу спецтехнику из грязи!",
  },
  {
    name: "Коммерческий транспорт",
    text: "Мы вытащим ваш коммерческий транспорт из грязи!",
  },
  {
    name: "Подъем или яма",
    text: "Мы поднимем ваш автомобиль из ямы!",
  },
  {
    name: "Квадроциклы и Багги",
    text: "Мы вытащим ваш квадроцикл или багги из грязи!",
  },
];

const data = flow;
---

<ul class="app-how-list">
  {
    data.map((item) => (
      <li class="_item">
        <div class="_name">{item.name}</div>
        <div class="_text" set:html={item.text} />
      </li>
    ))
  }
</ul>

<style lang="scss">
  .app-how-list {
    list-style: none;
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
    grid-auto-rows: minmax(0, 1fr);
    gap: 4.8rem;
    width: 100%;

    @media (width < 960px) {
      grid-template-columns: minmax(0, 1fr);
      grid-auto-rows: unset;
    }

    ._item {
      @media (width > 960px) {
        &:nth-child(2n + 1) {
          display: flex;
          flex-flow: column;
          align-items: flex-end;
          text-align: right;
        }
      }
    }

    ._name {
      font-size: 3.2rem;
      font-weight: 500;
      color: var(--color-accent);
      margin-bottom: 1rem;
      font-family: var(--font-family-secondary);
      text-wrap: balance;
    }

    ._text {
      line-height: 1.5;
      text-wrap: balance;
    }
  }
</style>
