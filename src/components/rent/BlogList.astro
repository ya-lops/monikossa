---
import BlogCard from "./partial/BlogCard.astro";

import blog from "@/data/rent/blog.js";
---


<div class="app-blog">
  <div class="app-blog__inner">
    {blog.map((post) => <div class="_item"><BlogCard data={post} /></div>)}
  </div>
</div>

<style lang="scss">
  .app-blog {
    width: 100%;
    
    &__inner {
      display: grid;
      gap: 2.4rem;

      @media (width < 576px) {
        grid-auto-columns: max(280px, 80%);
        grid-auto-flow: column;
        padding-bottom: .4rem;
        margin-inline: calc(-1 * var(--padding-inline));
        padding-inline: var(--padding-inline);
        scroll-padding-inline: calc(2 * var(--padding-inline));
        scroll-snap-type: x mandatory;
        overflow-x: auto;

        &::-webkit-scrollbar {
          display: none;
        }

        ._item {
          scroll-snap-align: start;
        }
      }

      @media (width > 576px) {
        grid-template-columns: repeat(1, minmax(0, 1fr));
      }

      @media (width > 992px) {
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 2.4rem;
      }
    }
  }
</style>