import Logo from "./Logo.astro";


---
<header>
  <div class="_menu"></div>
  <div class="_logo">
    <a href="zara/">
      <Logo/>
    </a>
  </div>
  <div></div>
  <div class="_nav"></div>
  <div class="_search"></div>
  <div class="_links"></div>
</header>

<style lang="scss">
  header {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    z-index: 5;
    display: grid;
    grid-template-columns: minmax(0, 2fr) minmax(0, 4fr) minmax(0, 6fr) minmax(0, 7fr) minmax(0, 5fr);
  }
</style>